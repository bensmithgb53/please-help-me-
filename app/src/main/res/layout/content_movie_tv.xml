<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_back_button_focus"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_player_back"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_movie_poster"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        tools:ignore="ContentDescription"
        tools:layout_constraintDimensionRatio="2:3"
        tools:layout_height="0dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="70dp"
        android:textColor="#FFFFFF"
        android:textSize="52sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_movie_poster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="70dp"
        tools:text="Title" />

    <ImageView
        android:id="@+id/iv_movie_rating_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/ic_star"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/tv_movie_rating"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/iv_movie_poster"
        app:layout_constraintTop_toTopOf="@id/tv_movie_rating"
        app:layout_goneMarginStart="70dp"
        tools:ignore="ContentDescription,UseAppTint" />

    <TextView
        android:id="@+id/tv_movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/barrier1"
        app:layout_constraintStart_toEndOf="@id/iv_movie_rating_icon"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
        tools:text="#.#" />

    <TextView
        android:id="@+id/tv_movie_quality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/barrier1"
        app:layout_constraintStart_toEndOf="@id/tv_movie_rating"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
        tools:text="HD"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_movie_released"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/barrier1"
        app:layout_constraintStart_toEndOf="@id/tv_movie_quality"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
        tools:text="yyyy"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_movie_runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/barrier1"
        app:layout_constraintStart_toEndOf="@id/tv_movie_released"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_title"
        tools:text="# h # min"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tv_movie_rating,tv_movie_quality,tv_movie_released,tv_movie_runtime" />

    <TextView
        android:id="@+id/tv_movie_genres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="70dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_movie_poster"
        app:layout_constraintTop_toBottomOf="@id/barrier1"
        app:layout_goneMarginStart="70dp"
        tools:text="Genres" />

    <TextView
        android:id="@+id/tv_movie_overview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="70dp"
        android:ellipsize="end"
        android:maxLines="10"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_movie_poster"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_genres"
        app:layout_goneMarginStart="70dp"
        tools:text="Overview" />

    <TextView
        android:id="@+id/btn_movie_watch_now"
        style="@style/AppTheme.Widget.Mobile.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/movie_watch_now"
        android:textSize="18sp"
        android:background="@drawable/bg_button_tv_green"
        app:layout_constraintStart_toEndOf="@id/iv_movie_poster"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_overview"
        app:layout_goneMarginStart="70dp" />

    <ProgressBar
        android:id="@+id/pb_movie_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#CC646464"
        android:progressTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/btn_movie_watch_now"
        app:layout_constraintStart_toStartOf="@id/btn_movie_watch_now"
        app:layout_constraintTop_toBottomOf="@id/btn_movie_watch_now"
        tools:progress="80" />

    <TextView
        android:id="@+id/btn_movie_trailer"
        style="@style/AppTheme.Widget.Mobile.Button.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="@string/movie_trailer"
        android:textSize="18sp"
        android:background="@drawable/bg_button_tv_orange"
        app:layout_constraintStart_toEndOf="@id/btn_movie_watch_now"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_overview" />

    <ImageView
        android:id="@+id/btn_movie_favorite"
        style="@style/AppTheme.Widget.Tv.Button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:background="@drawable/bg_heart_focus_tv"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:src="@drawable/ic_favorite_selector"
        android:fontFamily="@font/bebasneue_regular"
        app:layout_constraintBottom_toBottomOf="@id/btn_movie_trailer"
        app:layout_constraintStart_toEndOf="@id/btn_movie_trailer"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_overview"
        tools:ignore="ContentDescription,UseAppTint" />

</androidx.constraintlayout.widget.ConstraintLayout>