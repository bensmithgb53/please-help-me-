<resources>

    <style name="AppTheme.Mobile" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/bebasneue_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Tv" parent="@style/Theme.Leanback">
        <item name="fontFamily">@font/bebasneue_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.SplashScreen" parent="Theme.AppCompat">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:fontFamily">@font/bebasneue_regular</item>
    </style>

</resources>