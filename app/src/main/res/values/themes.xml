<resources>

    <style name="AppTheme.Mobile" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/bebasneue_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Tv" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/bebasneue_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="colorPrimary">#1E2129</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSurface">#1E2129</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorSecondary">#7358FF</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#B00020</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorControlHighlight">#7358FF</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorPrimaryVariant">#202F72</item>
        <item name="colorSecondaryVariant">#8D67AB</item>
        <item name="android:colorBackground">#1E2129</item>
        <!-- If you use Leanback and have the dependency, you can add: -->
        <!-- <item name="leanbackTheme">@style/Theme_Leanback</item> -->
        <!-- Removed fillColor, colorBackground, and ThemeOverlay.Leanback reference -->
    </style>

    <style name="AppTheme.SplashScreen" parent="Theme.AppCompat">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:fontFamily">@font/bebasneue_regular</item>
    </style>

</resources>