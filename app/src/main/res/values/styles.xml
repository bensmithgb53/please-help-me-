<resources>
    <style name="AppTheme.Widget.Tv.Button" parent="AppTheme.Tv">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/bebasneue_regular</item>
        <!-- All appearance attributes should be set in layout XML for TV buttons -->
    </style>

    <style name="AppTheme.Widget.Mobile.Button" parent="AppTheme.Mobile">
        <item name="android:background">@drawable/bg_button_mobile</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/bebasneue_regular</item>
    </style>

    <style name="AppTheme.Widget.Mobile.Button.Secondary" parent="AppTheme.Widget.Mobile.Button">
        <item name="android:background">@drawable/bg_button_secondary_mobile</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/bebasneue_regular</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources> 